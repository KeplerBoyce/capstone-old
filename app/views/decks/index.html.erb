<div style='position: absolute; right: 8px'>
<% if logged_in? %>
    Logged in as <%= link_to current_user.username, current_user %>
    <%= link_to '<button>Log Out</button>'.html_safe, '/logout' %>
<% else %>
    <%= link_to '<button>Log In</button>'.html_safe, '/login' %>
<% end %>
</div>

<h1>Decks</h1>

<div style='margin: 8px 0'>
<% if logged_in? %>
    <%= link_to "<button id='new-deck'>New Deck</button>".html_safe, new_deck_path %>
<% else %>
    <button class='greyed-out'>You must be logged in to create a new deck.</button>
<% end %>
</div>

<table>
    <tr>
        <th style='width: 200px'>Deck</th>
        <th style='width: 70px'># Cards</th>
        <th style='width: 100px'>Created By</th>
    </tr>
    <% @decks.each do |deck| %>
        <tr>
            <td><%= link_to deck.title, deck %></td>
            <td style='text-align: center'><%= deck.cards.length %></td>
            <td><%= deck.creator %></td>
        </tr>
    <% end %>
</table>
